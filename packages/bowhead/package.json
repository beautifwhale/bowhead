{
  "name": "@mortond/bowhead",
  "version": "0.0.4",
  "description": "Bowhead components",
  "author": "David Morton (https://github.ibm.com/DMorton)",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "umd:main": "dist/index.umd.js",
  "scripts": {
    "build": "microbundle --jsx React.createElement",
    "start": "microbundle watch --jsx React.createElement",
    "test": "jest --coverage --verbose --color",
    "view:coverage": "serve coverage/lcov-report",
    "lint": "eslint .",
    "clean": "rm -rf node_modules dist"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "microbundle": "^0.12.3",
    "serve": "^11.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@mortond/eslint-config"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}
