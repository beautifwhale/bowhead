{
  "name": "@mortond/bowhead",
  "version": "0.0.11",
  "description": "Bowhead components",
  "author": "David Morton (https://github.ibm.com/DMorton)",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "microbundle --format cjs --jsx React.createElement --jsxFragment React.Fragment",
    "start": "microbundle watch --format cjs --jsx React.createElement --jsxFragment React.Fragment",
    "test": "jest --coverage --verbose --color --passWithNoTests",
    "view:coverage": "serve coverage/lcov-report",
    "lint": "eslint .",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.1",
    "@material-ui/icons": "^4.9.1",
    "@reduxjs/toolkit": "^1.4.0",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-cookie": "^4.0.3",
    "react-dom": "^16.13.1",
    "react-redux": "^7.1.3",
    "react-redux-firebase": "^3.1.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-firestore": "^0.13.0"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "@mortond/eslint-config": "^0.2.17",
    "jest": "^24.9.0",
    "microbundle": "^0.12.3",
    "serve": "^11.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@mortond/eslint-config"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  }
}