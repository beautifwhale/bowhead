{
  "name": "@mortond/bowhead-functions",
  "version": "0.0.8",
  "description": "Bowhead functions",
  "author": "David Morton (https://github.ibm.com/DMorton)",
  "license": "MIT",
  "source": "src/index.js",
  "module": "dist/bowhead-functions.js",
  "files":[
    "dist/bowhead-functions.js"
  ],
  "scripts": {
    "build": "microbundle --format es --no-compress",
    "start": "microbundle watch --format es --no-compress",
    "test": "jest --coverage --verbose --color --passWithNoTests",
    "test:watch": "jest --watch --verbose --color",
    "view:coverage": "serve coverage/lcov-report",
    "lint": "eslint .",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "firebase-admin": "^9.0.0",
    "stripe": "^8.84.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@mortond/eslint-config": "^0.2.22",
    "jest": "^24.9.0",
    "microbundle": "^0.12.3",
    "serve": "^11.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@mortond/eslint-config"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "keywords": [
    "bowhead",
    "reactjs",
    "create-react-app"
  ]
}
